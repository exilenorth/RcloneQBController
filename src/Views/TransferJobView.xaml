<UserControl x:Class="RcloneQBController.Views.TransferJobView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RcloneQBController.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#2D2D30">
        <StackPanel Margin="15">
            <TextBlock Text="Configure Transfer Jobs" Foreground="#F1F1F1" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <DataGrid ItemsSource="{Binding Jobs}" AutoGenerateColumns="False" CanUserAddRows="False" Background="#3E3E42" Foreground="#F1F1F1" BorderBrush="#3E3E42">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Job Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTemplateColumn Width="2*">
                        <DataGridTemplateColumn.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Source Path (Remote)"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <TextBlock.ToolTip>
                                        <ToolTip>This is the folder on your seedbox where the files you want to transfer are located (e.g., `/home/user/downloads`).</ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </StackPanel>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SourcePath}" VerticalAlignment="Center" Margin="4,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="2*">
                        <DataGridTemplateColumn.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Destination Path (Local)"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <TextBlock.ToolTip>
                                        <ToolTip>This is the folder on your computer where you want to save the transferred files (e.g., `C:\Users\YourName\Downloads`).</ToolTip>
                                    </TextBlock.ToolTip>
                                </TextBlock>
                            </StackPanel>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DestPath}" VerticalAlignment="Center" Margin="4,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Add" Command="{Binding AddJobCommand}" Width="80" Margin="5" Background="#007ACC" Foreground="#F1F1F1" BorderThickness="0"/>
                <Button Content="Edit" Command="{Binding EditJobCommand}" Width="80" Margin="5" Background="#007ACC" Foreground="#F1F1F1" BorderThickness="0"/>
                <Button Content="Remove" Command="{Binding RemoveJobCommand}" Width="80" Margin="5" Background="#D32F2F" Foreground="#F1F1F1" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>