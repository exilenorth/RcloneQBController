<Window x:Class="RcloneQBController.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:RcloneQBController.Views"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Rclone QB Controller" Height="600" Width="1000">
   <Window.Resources>
       <tb:TaskbarIcon x:Key="MyNotifyIcon" x:Name="MyNotifyIcon"
                       IconSource="/Assets/icon.ico"
                       ToolTipText="Rclone QB Controller">
           <tb:TaskbarIcon.ContextMenu>
               <ContextMenu>
                   <MenuItem Header="Show" Command="{Binding ShowWindowCommand}" />
                   <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
               </ContextMenu>
           </tb:TaskbarIcon.ContextMenu>
       </tb:TaskbarIcon>
   </Window.Resources>
   <Grid>
       <Grid.RowDefinitions>
           <RowDefinition Height="Auto" />
           <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings" Command="{Binding OpenSettingsCommand}" />
                <Separator />
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_View User Guide" Command="{Binding OpenUserGuideCommand}" />
                <MenuItem Header="Open _Log Folder" Command="{Binding OpenLogFolderCommand}" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <views:ScriptControlView Grid.Column="0" />

            <views:ActivityDashboardView Grid.Column="1" />
        </Grid>
    </Grid>
</Window>